@section styles{
    <link href="~/css/Learner/view-course-material.css" rel="stylesheet" type="text/css" />

}

@*go back row*@
<div class="row m-3">
    <div class="col-1"></div>
    <div class="col">
        <a class="menu-link" asp-controller="Learner" asp-action="ViewEnrolledCourses">
            <span class="menu-title">Go back to view enrolled courses</span>
        </a>
    </div>
</div>

@*buttons row*@
<div class="row align-items-center justify-content-between bg-light-info mtb-5 mx-0 p-4">
    <div id="prev_chap_btn" class="col-4 text-center">

    </div>
    <div id="current_chap_name" class="col-4 text-center">

    </div>
    <div id="next_chap_btn" class="col-4 text-center">

    </div>
</div>

@*course material content*@
<div id="" class="container">

    <div class="row mt-5">
        <div id="view_course_material" class="col">

        </div>
        <div id="view_accordion" class="col-4">

        </div>
    </div>


</div>

<!--Start of Toast-->
<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 1050">
    <div id="liveToast" class="toast hide" role="alert" aria-live="assertive" aria-atomic="true">
        <div id="toastHeader" class="toast-header text-white">
            <strong class="me-auto">Notifications</strong>
            <small></small>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div id="toastBody" class="toast-body text-white">

        </div>
    </div>
</div>
<!--End of Toast-->




@section scripts {
    <script onload="view('@ViewBag.CourseClassId', '@ViewBag.ChapterId', '@ViewBag.GradedQuizId')" src="~/js/Learner/view-coursematerial.js"></script>
}
