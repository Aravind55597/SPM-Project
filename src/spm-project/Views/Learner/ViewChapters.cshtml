@section styles{
    <link href="~/css/Learner/pagination.css" rel="stylesheet" type="text/css" />
    <link href="~/css/Learner/view-chapters.css" rel="stylesheet" type="text/css" />

}

<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <div class="d-flex flex-column-fluid">

        @*Start Container*@
        <div class="container">

            @*Start Card*@
            <div class="card card-custom">

                @*header of the table : put tabs here *@
                <div class="card-header"></div>

                @*card body is to add content*@
                <div class="card-body">

                    @*begin: Datatable*@
                    <table class="table table-bordered table-hover table-checkable" id="course_class_datatable" style="margin-top: 13px !important">
                        <thead>
                            <tr>
                                <th>Course Name</th>
                                <th>Class Name</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>No of Chapters</th>
                                @*add button*@
                                <th>Action</th>
                            </tr>

                        </thead>
                    </table>
                    @*end: Datatable*@

                </div>

            </div> @*end Card*@

        </div>@*end Container*@

    </div>
</div>


@section scripts {
    <script src="~/js/Learner/view-chapters.js"></script>
}

<div class="content d-flex flex-column flex-column-fluid">
    <div class="d-flex flex-column-fluid">
        @*begin: overlay*@
        <div class="overlay" style="display:none">

            <div class="container">

                <!-- Start of Chapters Modal -->
                <div class="modal" id="exampleModal" style="display:block">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">View Chapters</h5>
                                <button type="button" class="btn-close"></button>
                            </div>
                            <div class="modal-body" id="view_classes">
                                ...
                            </div>
                            <div class="modal-footer">
                                @*<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary">Save changes</button>*@
                            </div>
                        </div>
                    </div>
                </div>
                <!--End of Chapters Modal-->

            </div> @*end Container*@

        </div>@*end: overlay*@

    </div>
</div>
