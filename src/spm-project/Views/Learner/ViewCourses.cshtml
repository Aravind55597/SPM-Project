@section styles{
    <link href="~/assets/plugins/custom/datatables/datatables.bundle.css" rel="stylesheet" type="text/css" />
    <link href="~/css/Learner/pagination.css" rel="stylesheet" type="text/css" />
    <link href="~/css/Learner/view-courses.css" rel="stylesheet" type="text/css" />
}

<div class="container">
    <!-- Start of Eligible course -->
    <div class="tab-pane fade show active" id="view-courses" role="tabpanel" aria-labelledby="view-courses-tab">
        <!-- card design -->
        <div class="row">
            <div class="col"></div>
            <div class="col-6">
                <div id="wrapper">
                    <section>
                        <div class="data-container"></div>
                        <div id="pagination-view-courses"></div>
                    </section>
                </div>
            </div>

            <div class="col">

            </div>
        </div>


        <!-- Start of Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Classes Available</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body" id="view_classes">
                        ...
                    </div>
                    <div class="modal-footer">
                        @*<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary">Save changes</button>*@
                    </div>
                </div>
            </div>
        </div>
        <!--End of Modal-->
        <!--Start of Toast-->
        <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 1050">
            <div id="liveToast" class="toast hide" role="alert" aria-live="assertive" aria-atomic="true">
                <div id="toastHeader" class="toast-header text-white">
                    <strong class="me-auto">Notifications</strong>
                    <small></small>
                    <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
                <div id="toastBody" class="toast-body text-white">

                </div>
            </div>
        </div>
        <!--End of Toast-->


    </div>
    <!-- End of Eligible course -->
</div>


@section scripts {

    <script src="~/js/Learner/pagination.js"></script>
    <script src="~/assets/plugins/custom/datatables/datatables.bundle.js"></script>
    <script src="~/js/Learner/view-courses.js"></script>
    <script src="~/js/Learner/jquery-dateFormat.js"></script>

}
