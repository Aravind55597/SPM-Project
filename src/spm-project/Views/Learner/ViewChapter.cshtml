<div class="container">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="view-courses-tab" data-bs-toggle="tab" data-bs-target="#view-courses" type="button" role="tab" aria-controls="view-courses" aria-selected="true">Discover Courses</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="my-courses-tab" data-bs-toggle="tab" data-bs-target="#my-courses" type="button" role="tab" aria-controls="my-courses" aria-selected="false">My Courses</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact" type="button" role="tab" aria-controls="contact" aria-selected="false">Contact</button>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">

        <!-- Start of enrolled courses -->

        <div class="row">
            <div class="col">
                <button onclick="get_chapter(25)">test</button>
            </div>
        </div>


        <!-- Start of Chapters Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Classes Available</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body" id="view_classes">
                        ...
                    </div>
                    <div class="modal-footer">
                        @*<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary">Save changes</button>*@
                    </div>
                </div>
            </div>
        </div>
        <!--End of Chapters Modal-->
        <!-- End of enrolled courses -->

    </div>
</div>


@section scripts {

    <script src="~/assets/plugins/custom/datatables/datatables.bundle.js"></script>
    <script src="~/js/Learner/view-courses.js"></script>
    <script>
        function get_chapter(courseClassId) {
            var retrieveChapters = $("#get-chapters").val() + "?id=" + courseClassId;

            $.ajax({
                url: retrieveChapters, success: function (result) {
                    console.log(result)
                    var dataHtml = ``;
                    $.each(result.data, function (index, item) {

                        dataHtml += '<div class="row align-items-center"><div class="col">' + `<div class="card mb-3" style="max-width: 540px; background-color: fefaf4;">
                        <div class="row g-0">
                            <div class="col">
                                <div class="card-body">
                                    <h5 class="card-title">chapter</h5>

                                    <p class="card-text">chapter content</p>


                                    <p class="card-text"><small class="text-muted"></small></p>
                                    <div class="row">
                                        <div class="col"></div>
                                        <div class="col-6">
                                            <button type="button" onclick=""; class="btn-sign-up btn btn-primary w-100">
                                              Sign up for this class
                                            </button>
                                        </div>
                                        <div class="col"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>` + '</div></div>';;
                    });
                    dataHtml += ``;
                    $("#view_classes").html(dataHtml);

                }
            });
        }
    </script>
}
