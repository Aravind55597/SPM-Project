                    </div>
                    <!--end::Entry-->
                </div>
            </div>
            <!-- End of DataTable -->
            @*url for retrieving customers*@
            <input type="hidden" id="retreive-customers" value="@Url.RouteUrl("RetrieveCustomers")">
