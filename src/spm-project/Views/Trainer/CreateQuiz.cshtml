@section styles{
    <link href="~/css/Trainer/CreateQuiz.css" rel="stylesheet" type="text/css" />
}



<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <div class="d-flex flex-column-fluid">
        <div class="container">

            <div class="card card-custom">
                @*header of the table : put tabs here *@
                <div class="card-header"></div>
                @*card body is to add content*@
                <div class="card-body">
                    @*begin: Datatable*@
                    <table class="table table-bordered table-hover table-checkable" id="course_class_datatable" style="margin-top: 13px !important;width:100%">
                        <thead>
                            <tr>
                                <th>Course Name</th>
                                <th>Class Name</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Chapters</th>
                                @*<th>Number of students</th>*@
                                @*add button*@
                                <th>Ungraded Quiz</th>
                                <th>Graded Quiz</th>
                            </tr>
                        </thead>
                    </table>
                    @*end: Datatable*@
                </div>
            </div>

            <br />

            <div class="card card-custom">

                @*header of the table : put tabs here *@
                <div class="card-header">
                    <h1>Course Class</h1>
                </div>


                @*card body is to add content*@
                <div class="card-body ">
                    <form method="post" action="" id="quizForm">
                        <div class="d-flex flex-row">
                            <div class="container flex-column" id="containerLeft">

                                <!--begin::Time Limit section-->
                                <!--end::Time Limit section-->
                                <!--begin::Qn Card (at least preset 1)-->
                                <div class="form-group">
                                    <input type="text" class="form-control" id="quizName" placeholder="Quiz Name">
                                    <textarea class="form-control my-4 ml-2 qnText" id="quizDescription" rows="2" placeholder="Write question description"></textarea>
                                </div>
                                <div class="form-check form-check-inline justify-content-center">
                                    <input class="form-check-input gradedRadio" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="true">
                                    <label class="form-check-label" for="inlineRadio1">Graded Quiz</label>
                                </div>
                                <div class="form-check form-check-inline justify-content-center">
                                    <input class="form-check-input gradedRadio" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="false" checked>
                                    <label class="form-check-label" for="inlineRadio2">Ungraded Quiz</label>
                                </div>
                                <div class="d-flex justify-content-end mb-2">
                                    <button type="button" class="btn btn-success btn-sm btn-block" id="create_TFqn">Add True/False question</button>
                                    <button type="button" class="btn btn-success btn-sm btn-block" id="create_MCQqn">Add MCQ question</button>
                                </div>
                                <div id="question_cards">
                                    <div class="questions card p-4 m-4">
                                        <textarea class="form-control my-4 ml-2 qnText" id="exampleFormControlTextarea1" rows="2" placeholder="Write question here"></textarea>
                                        <div class="question_options">
                                            <h5 class="form-label">A.</h5>
                                            <h5 class="form-label">B.</h5>
                                            <h5 class="form-label">C.</h5>
                                            <h5 class="form-label">D.</h5>
                                        </div>
                                        <div class="input-group mb-3">
                                            <span class="input-group-text" id="inputGroup-sizing-default">Set Answer</span>
                                            <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                                        </div>
                                        <div class="input-group mb-3">
                                            <span class="input-group-text" id="inputGroup-sizing-default">Set Marks</span>
                                            <input type="number" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                                        </div>
                                        <div class="d-flex justify-content-end mb-2 mt-4">
                                            <button type="button" class="btn btn-danger btn-block" id="delete">Delete</button>
                                        </div>

                                    </div>
                                </div>
                                <!--end::Qn Card-->
                                <button type="button" class="btn btn-info"> Create new quiz</button>
                            </div>
                            <div class="container d-flex align-items-end flex-column" id="containerRight">
                                <div class="form-group">
                                    <label for="exampleFormControlSelect1">Set Quiz Duration</label>
                                    <select class="form-control" id="quizDuration">
                                        <option value='5'>5 min</option>
                                        <option value='10'>10 min</option>
                                        <option value='15'>15 min</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>






        </div>
    </div>
</div>




@section scripts {
    <script src="~/js/Trainer/CreateQuiz.js"></script>
}


