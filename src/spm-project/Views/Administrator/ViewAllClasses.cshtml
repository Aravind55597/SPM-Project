@section styles{
    <link href="~/css/HR/view-all-classes.css" rel="stylesheet" type="text/css" />
}

<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <div class="d-flex flex-column-fluid">
        <div class="container">
            <div class="card card-custom">

                @*header of the table : put tabs here *@
                <div class="card-header">

                </div>


                @*card body is to add content*@
                <div class="card-body">

                    <div style="display: inline-block;">
                        <button class="btn btn-primary viewClassList">View Class List</button>
                    </div>

                    <div style="display: inline-block;">
                        <button class="btn btn-danger deleteClass">Delete Class</button>
                    </div>



                    @*begin: Datatable*@
                    <table class="table table-bordered table-hover table-checkable" id="class_datatable" style="margin-top: 13px !important">
                        <thead>
                            <tr>
                                <th>Course Name</th>
                                <th>Class Name</th>
                                <th>Present Count of Learners</th>
                                <th>Total Slots in Class</th>
                                @*add button*@
                                <th>Action</th>
                            </tr>

                        </thead>
                    </table>
                    @*end: Datatable*@

                </div>

            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/js/HR/view-all-classes.js"></script>
}

@*begin: overlay*@

@*<div class="overlay" style="display:none">*@
<div class="overlay" style="display:none">



    <div class="content d-flex flex-column flex-column-fluid">
        <div class="d-flex flex-column-fluid">

            <div class="container">

                @*view class list Modal*@
                <div id="viewClassPopUp" class="card card-custom" style="width: 75rem; margin: 0 auto;">

                    <div class="card-header">
                        <button type="button" class="btn-close" aria-label="Close"></button>
                        <ul class="nav nav-tabs">
                            <li class="nav-item">
                                <a href="#ClassList" class="nav-link active" data-bs-toggle="tab">Class List</a>
                            </li>
                            <li class="nav-item">
                                <a href="#AssignTrainer" class="nav-link" data-bs-toggle="tab">Assign Trainer</a>
                            </li>
                            <li class="nav-item">
                                <a href="#AssignLearner" class="nav-link" data-bs-toggle="tab">Assign Learner</a>
                            </li>
                        </ul>

                    </div>


                    @*begin: card-body*@
                    <div class="card-body">

                        @*begin: tab-content*@
                        <div class="tab-content">

                            @*begin: view class list tab*@
                            <div class="tab-pane fade show active" id="ClassList">

                                <button class="btn btn-danger withdraw">Withdraw</button>

                                @*begin: Datatable*@
                                <table class="table table-bordered table-hover table-checkable" id="individual_class_datatable" style="margin-top: 13px !important">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th>User ID</th>
                                            <th>Name</th>
                                            <th>Role in Class</th>
                                        </tr>

                                    </thead>
                                </table>
                                @*end: Datatable*@

                            </div>
                            @*end: view class list tab*@

                            @*begin: assign trainer tab*@
                            <div class="tab-pane fade" id="AssignTrainer">

                                <button class="btn btn-success addTrainer">Add Trainer</button>

                                @*begin: Datatable*@
                                <table class="table table-bordered table-hover table-checkable" id="assign_trainer_datatable" style="margin-top: 13px !important">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th>User ID</th>
                                            <th>Name</th>
                                        </tr>

                                    </thead>
                                </table>
                                @*end: Datatable*@

                            </div>
                            @*end: assign trainer tab*@

                            @*begin: assign learner tab*@
                            <div class="tab-pane fade" id="AssignLearner">

                                <button class="btn btn-success addLearner">Add Learner</button>

                                @*begin: Datatable*@
                                <table class="table table-bordered table-hover table-checkable" id="assign_learner_datatable" style="margin-top: 13px !important">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th>User ID</th>
                                            <th>Name</th>
                                        </tr>

                                    </thead>
                                </table>
                                @*end: Datatable*@

                            </div>
                            @*end: assign learner tab*@

                        </div>
                        @*end: tab-content*@


                    </div>
                    @*end: card-body*@

                </div>
                @*end: view class list Modal*@

            </div>

        </div>
    </div>

</div>
@*end: overlay*@
